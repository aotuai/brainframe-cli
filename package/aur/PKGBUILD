# Maintainer: Aotu <aotooling at aotu dot ai>

pkgname=brainframe-cli
pkgver=0.2.0
pkgrel=1
pkgdesc="CLI to interact with the BrainFrame backend"
arch=('any')
url="https://github.com/aotuai/brainframe-cli"
license=('BSD')
groups=('brainframe')
depends=('brainframe-backend' 'python-i18n' 'python-yaml' 'python-distro' 'python-packaging')
makedepends=('python-dephell')
source=("${pkgname}-${pkgver}.tar.gz::https://github.com/aotuai/brainframe-cli/archive/v${pkgver}.tar.gz")
sha512sums=("f003e7a3705019c572c8c6684f80ff89a65bd21f7906708c526db6ab0c8222ba280656abb4ac048dc4099d4b81fdbd56491c27b9cccf4c980b532785ba28cc23")

prepare() {
	  cd "${pkgname}-${pkgver}"
    dephell deps convert --from pyproject.toml --to setup.py
}

build() {
    cd "${pkgname}-${pkgver}"
    python setup.py build
}

package() {
  	cd "${pkgname}-${pkgver}"
  	python setup.py install --root="${pkgdir}" --optimize=1 --skip-build

  	install -Dm644 COPYING -t "${pkgdir}/usr/share/licenses/${pkgname}"
}
